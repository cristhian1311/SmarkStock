<odoo>
    <record id="view_product_register_import_wizard_form" model="ir.ui.view">
        <field name="name">product.register.import.wizard.form</field>
        <field name="model">product.register.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Productos CSV">
                <sheet>
                    <group>
                        <field name="data_file" filename="filename" widget="binary"/>
                        <field name="filename" readonly="1"/>
                        <field name="images_zip" filename="images_zip_filename" widget="binary"/>
                        <field name="images_zip_filename" readonly="1"/>
                    </group>
                    <group>
                        <field name="delimiter"/>
                        <field name="encoding"/>
                        <field name="update_existing"/>
                        <field name="stock_action"/>
                    </group>
                    <group>
                        <field name="note" readonly="1" colspan="4"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Importar" type="object" name="action_import" class="btn-primary"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_register_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Productos CSV</field>
        <field name="res_model">product.register.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_register_import" parent="menu_product_register_root" name="Importar CSV" action="action_product_register_import_wizard" sequence="20"/>
</odoo>
