<odoo>
    <record id="view_sale_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Pedidos de Venta">
                <field name="date"/>
                <field name="name"/>
                <field name="product_register_id"/>
                <field name="quantity"/>
                <field name="total_price"/>
                <field name="state"/>
                <button name="action_confirm" type="object" string="Confirmar" class="oe_highlight" attrs="{ 'invisible': [('state', '!=', 'draft')]}"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Pedido de Venta">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="product_register_id"/>
                        <field name="quantity"/>
                        <field name="unit_price" readonly="1"/>
                        <field name="total_price" readonly="1"/>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirmar Venta" type="object" class="btn-primary" attrs="{ 'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sales_root" name="Ventas" sequence="30"/>
    <menuitem id="menu_sales_orders" name="Pedidos de Venta" parent="menu_sales_root" action="action_sale_order" sequence="10"/>
</odoo>
